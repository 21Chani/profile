{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true
	},
	"tailwindCSS.classAttributes": [
		"class",
		"className",
		"inputContainerClassName",
		"inputClassName",
		"classNames",
		"panelClassName",
		"rootClassName",
		"containerClassName"
	],
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cx\\(([^)]*)\\)", "'([^']*)'"]
	],
	"css.validate": false
}
